        <VBox spacing="8" alignment="CENTER_LEFT">
            <Label text="Class Name:" textFill="#7f8c8d" style="-fx-font-size: 12px;"/>
            <TextField fx:id="createNameField" promptText="e.g. BUET CSE-24" style="-fx-font-size: 14px; -fx-padding: 8;"/>
            
            <Label text="Unique Join Code (Must be unique):" textFill="#7f8c8d" style="-fx-font-size: 12px;"/>
            <TextField fx:id="createCodeField" promptText="e.g. CSE24-BUET" style="-fx-font-size: 14px; -fx-padding: 8;"/>
        </VBox>

        <Button onAction="#onCreateClick" text="Create Channel &amp; Enter" maxWidth="Infinity" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-font-size: 14px; -fx-padding: 10;" />
    </VBox>

    <Label fx:id="statusLabel" text="Ready to connect..." textFill="#95a5a6">
        <font>
            <Font size="13.0" />
        </font>
    </Label>

</VBox>
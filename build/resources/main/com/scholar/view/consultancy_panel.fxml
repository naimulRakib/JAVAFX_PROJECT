<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<SplitPane dividerPositions="0.35" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.scholar.controller.ConsultancyController" style="-fx-background-color: #f4f6f7;">
    
    <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: white;">
        <Button text="âž• Ask a Doubt" onAction="#onAskDoubt" maxWidth="Infinity" style="-fx-background-color: #8e44ad; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10; -fx-cursor: hand;" />
        <Label text="ðŸ” Recent Doubts" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        <TextField promptText="Search Subject/Topic..." />
        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent; -fx-border-color: transparent;">
            <VBox fx:id="doubtsListContainer" spacing="10" />
        </ScrollPane>
    </VBox>

    <BorderPane>
        <top>
            <VBox fx:id="doubtDetailBox" spacing="8" style="-fx-padding: 20; -fx-background-color: white; -fx-border-color: #e2e8f0; -fx-border-width: 0 0 1 0;" visible="false">
                <HBox spacing="10">
                    <Label fx:id="detailSubject" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 3 8; -fx-background-radius: 5; -fx-font-size: 11px;" />
                    <Label fx:id="detailTopic" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-padding: 3 8; -fx-background-radius: 5; -fx-font-size: 11px;" />
                </HBox>
                <Label fx:id="detailTitle" style="-fx-font-size: 18px; -fx-font-weight: bold;" wrapText="true" />
                <Label fx:id="detailDesc" style="-fx-text-fill: #34495e; -fx-font-size: 14px;" wrapText="true" />
                <Label fx:id="detailStudent" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px; -fx-font-style: italic;" />
            </VBox>
        </top>
        
        <center>
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-border-color: transparent;">
                <VBox fx:id="answersContainer" spacing="15" style="-fx-padding: 20;" />
            </ScrollPane>
        </center>
        
        <bottom>
            <VBox fx:id="replyBox" spacing="10" style="-fx-padding: 15; -fx-background-color: white; -fx-border-color: #e2e8f0; -fx-border-width: 1 0 0 0;" visible="false">
                <Label text="ðŸ’¡ Provide a Solution (Mentors &amp; Seniors)" style="-fx-font-weight: bold; -fx-text-fill: #27ae60;" />
                <TextArea fx:id="answerInput" promptText="Write your detailed explanation here..." prefRowCount="3" wrapText="true" />
                <HBox alignment="CENTER_RIGHT">
                    <Button text="Post Answer ðŸš€" onAction="#onSubmitAnswer" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" />
                </HBox>
            </VBox>
        </bottom>
    </BorderPane>
</SplitPane>
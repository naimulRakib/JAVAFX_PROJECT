<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 40;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.scholar.controller.LoginController">

   <Label text="Scholar Grid ðŸŽ“" textFill="WHITE">
      <font><Font name="System Bold" size="36.0" /></font>
   </Label>

   <TabPane fx:id="mainTabPane" maxWidth="400.0" prefHeight="450.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-tab-min-width: 180;" tabClosingPolicy="UNAVAILABLE">
     <tabs>
       
       <Tab text="Login">
         <VBox spacing="15.0" style="-fx-padding: 30;">
            <Label text="Welcome Back!" textFill="#2c3e50">
               <font><Font name="System Bold" size="18.0" /></font>
            </Label>
            <TextField fx:id="emailField" promptText="Email (Gmail)" style="-fx-padding: 12;" />
            <PasswordField fx:id="passwordField" promptText="Password" style="-fx-padding: 12;" />
            <Button fx:id="loginBtn" maxWidth="Infinity" onAction="#onLoginClick" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12; -fx-cursor: hand;" text="Sign In" />
         </VBox>
       </Tab>

       <Tab text="Sign Up">
         <VBox spacing="10.0" style="-fx-padding: 20;">
            <Label text="Choose Your Role" textFill="#7f8c8d" />
            <HBox spacing="10">
               <ToggleButton fx:id="studentToggle" maxWidth="Infinity" HBox.hgrow="ALWAYS" selected="true" text="I am a Student">
                  <toggleGroup><ToggleGroup fx:id="roleGroup"/></toggleGroup>
               </ToggleButton>
               <ToggleButton fx:id="adminToggle" maxWidth="Infinity" HBox.hgrow="ALWAYS" text="I am an Admin/CR" toggleGroup="$roleGroup" />
            </HBox>

            <Separator />

            <TextField fx:id="regNameField" promptText="Full Name" />
            <TextField fx:id="regEmailField" promptText="Gmail Address" />
            <PasswordField fx:id="regPassField" promptText="Create Password" />

            <StackPane>
               <VBox fx:id="studentFields" spacing="10">
                  <Label text="Classroom Access:" style="-fx-font-size: 11;" />
                  <TextField fx:id="channelUuidField" promptText="Enter Classroom UUID (Ask your CR)" style="-fx-border-color: #e67e22; -fx-border-radius: 3;" />
                  <Button maxWidth="Infinity" onAction="#onStudentSignupClick" style="-fx-background-color: #e67e22; -fx-text-fill: white;" text="Join Classroom" />
               </VBox>
               
               <VBox fx:id="adminFields" spacing="10" visible="false">
                  <Label text="Channel Creation:" style="-fx-font-size: 11;" />
                  <TextField fx:id="newChannelNameField" promptText="Department Name (e.g. BUET CSE)" />
                  <TextField fx:id="newChannelCodeField" promptText="Custom Short Code (e.g. CSE24)" />
                  <Button maxWidth="Infinity" onAction="#onAdminSignupClick" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="Create &amp; Register" />
               </VBox>
            </StackPane>
         </VBox>
       </Tab>
     </tabs>
   </TabPane>

   <Label fx:id="statusLabel" textFill="#e74c3c" />
</VBox>